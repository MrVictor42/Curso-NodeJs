<h1>{{category.name}}</h1>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h3> {{title}} </h3>
        <p> {{description}} </p>
        <a href="/post/{{slug}}"><button class="btn btn-success"> Show More </button></a>
        <hr>
        <small> Created At: {{createdAt}} </small>
    </div>
</div>
{{else}}
    <h5> Nothing Posts :/ </h5>
{{/each}}